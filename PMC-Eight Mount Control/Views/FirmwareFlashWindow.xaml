<Window x:Class="PMC_Eight_Mount_Control.Views.FirmwareFlashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Firmware Flash" Height="276" Width="438">
    <Grid>
        <TextBlock Text="Select Firmware File:" Margin="10,10,10,10"/>
        <TextBox x:Name="FilePathTextBox" Margin="10,67,12,162" Height="30"/>
        <Button Content="Browse" Command="{Binding BrowseCommand}" Margin="10,0,0,0" HorizontalAlignment="Left"/>
        <Button Content="Flash Firmware" Command="{Binding FlashFirmwareCommand}" Margin="226,0,0,0" HorizontalAlignment="Left"/>
        <TextBlock Text="{Binding FlashStatus}" Foreground="Green" Margin="10,80,10,80"/>
    </Grid>
</Window>
